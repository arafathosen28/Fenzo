// firestore.rules
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /products/{doc} {
      allow read: if true;
      // Deny client writes; writes must go through server (Next.js route handlers / Admin SDK).
      allow write: if false;
    }
    match /orders/{doc} {
      // Keep your desired policy for orders; example:
      allow read, write: if request.auth != null;
    }
  }
}
